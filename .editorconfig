# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.{c,h}]
indent_size = 4
indent_style = tab
tab_width = 8

[*.zig]
indent_size = 4
indent_style = space
